{
  "version": 1,
  "disable_existing_loggers": 0,
  "formatters": {
    "simple": {
      "format": "%(message)s"
    },
    "detailed": {
      "format": "%(asctime)s - %(levelname)s: %(message)s [ %(module)s:%(funcName)s():%(lineno)s ]",
      "datefmt": "%m/%d/%Y %I:%M:%S %p"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "report": {
      "class": "logging.FileHandler",
      "formatter": "simple",
      "filename": "{}/logs/backup.rpt".format(self._base_dir),
      "mode": "w",
      "encoding": "utf8"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "WARNING",
      "formatter": "detailed",
      "filename": "/mnt/onyxbackup-xs/logs/onyxbackup.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    },
    "debug": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "/mnt/onyxbackup-xs/logs/debug.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    }
  },
  "loggers": {
    "onyxbackup": {
      "level": "INFO",
      "handlers": ["console", "report", "file", "debug"],
      "propagate": 0
    }
  },
  "root": {
    "level": "WARNING",
    "handlers": ["console"]
  }
}